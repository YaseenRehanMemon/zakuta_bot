<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.44.0/min/vs/editor/editor.main.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fab fa-whatsapp"></i> Zakuta Bot Control Panel
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-terminal"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/file-manager">
                            <i class="fas fa-folder"></i> File Manager
                        </a>
                    </li>
                </ul>
                <div class="d-flex">
                    <span class="navbar-text me-3">
                        <i class="fas fa-server"></i> Port: <%= port %>
                    </span>
                    <div id="editor-status" class="navbar-text">
                        <span class="badge bg-warning">
                            <i class="fas fa-code"></i> Editor Loading...
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <!-- Breadcrumb Navigation -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-secondary p-2 rounded">
                <li class="breadcrumb-item">
                    <a href="#" id="home-link" class="text-decoration-none">
                        <i class="fas fa-home"></i> Root
                    </a>
                </li>
                <li class="breadcrumb-item active text-light" id="current-path">/</li>
            </ol>
        </nav>

        <!-- Toolbar -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <button id="refresh-files" class="btn btn-outline-primary btn-sm me-2">
                    <i class="fas fa-sync-alt"></i> Refresh
                </button>
                <button id="new-file" class="btn btn-success btn-sm me-2">
                    <i class="fas fa-plus"></i> New File
                </button>
                <button id="new-folder" class="btn btn-primary btn-sm me-2">
                    <i class="fas fa-folder-plus"></i> New Folder
                </button>
                <button id="upload-file" class="btn btn-info btn-sm">
                    <i class="fas fa-upload"></i> Upload
                </button>
            </div>
            <div class="input-group" style="max-width: 300px;">
                <input type="text" id="search-files" class="form-control form-control-sm bg-secondary text-light border-secondary" placeholder="Search files...">
                <button class="btn btn-outline-secondary btn-sm" type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>

        <!-- Files Table -->
        <div class="card bg-secondary">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-dark mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th style="width: 50px;"></th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Size</th>
                                <th>Modified</th>
                                <th style="width: 50px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="files-table-body">
                            <!-- Files will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Loading indicator -->
        <div id="loading-indicator" class="text-center mt-3" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <!-- Empty state -->
        <div id="empty-state" class="text-center mt-5" style="display: none;">
            <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No files found</h5>
            <p class="text-muted">This directory is empty.</p>
        </div>
    </div>

    <!-- Hidden file input for uploads -->
    <input type="file" id="file-input" style="display: none;" multiple>

    <!-- Context Menu -->
    <div id="context-menu" class="dropdown-menu bg-dark border-secondary" style="display: none; position: absolute; z-index: 1000;">
        <button class="dropdown-item text-light" id="context-edit">
            <i class="fas fa-edit me-2"></i>Edit
        </button>
        <button class="dropdown-item text-light" id="context-download">
            <i class="fas fa-download me-2"></i>Download
        </button>
        <button class="dropdown-item text-light" id="context-rename">
            <i class="fas fa-i-cursor me-2"></i>Rename
        </button>
        <div class="dropdown-divider"></div>
        <button class="dropdown-item text-danger" id="context-delete">
            <i class="fas fa-trash me-2"></i>Delete
        </button>
    </div>

    <!-- Modals -->
    <div class="modal fade" id="newFileModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Item</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="item-name" class="form-label">Name</label>
                        <input type="text" class="form-control bg-secondary text-light" id="item-name">
                    </div>
                    <div class="mb-3">
                        <label for="item-type" class="form-label">Type</label>
                        <select class="form-select bg-secondary text-light" id="item-type">
                            <option value="file">File</option>
                            <option value="directory">Directory</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="create-item">Create</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Rename Modal -->
    <div class="modal fade" id="renameModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Rename Item</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rename-name" class="form-label">New Name</label>
                        <input type="text" class="form-control bg-secondary text-light" id="rename-name">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="rename-item">Rename</button>
                </div>
            </div>
        </div>
    </div>

    <!-- File Editor Modal -->
    <div class="modal fade" id="editorModal" tabindex="-1" data-bs-backdrop="static">
        <div class="modal-dialog modal-xl" style="max-width: 90vw;">
            <div class="modal-content bg-dark text-light" style="height: 85vh; max-height: 85vh;">
                <div class="modal-header">
                    <h5 class="modal-title" id="editor-modal-title">File Editor</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-0" style="height: calc(85vh - 120px); overflow: hidden;">
                    <div id="editor-container" style="height: 100%; width: 100%;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" id="save-editor-file">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.4/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.44.0/min/vs/loader.min.js"></script>
    <script src="/js/file-manager.js"></script>
</body>
</html>